async function input(promptText) {
    process.stdin.resume();
    process.stdout.write(promptText);

    return new Promise(resolve => {
        process.stdin.once('data', dt => {
            process.stdin.pause();
            resolve(dt);
            process.stdout.write('\n');
        });
    })
}

