//! $RTH={"type":"gui"}

const { app, BrowserWindow } = WApplication;

let mainWindow;

process.title = 'Choose File';

app.on('ready', () => {
    mainWindow = new BrowserWindow({
        x: 0,
        y: 0,
        width: 640,
        height: 450,
        fullscreenable: false,
        maximizable: false,
        minimizable: false,
        snappable: false,
        title: 'Choose File...'
    }, {
        env: {
            pipe: process.env.pipe
        }
    });
    mainWindow.load('./filePicker.js');

    mainWindow.on('closed', () => {
        mainWindow = null;
    });
})

try {
    await app.executeAsync();
} catch (err) {
    console.error('App crashed:', err);
}